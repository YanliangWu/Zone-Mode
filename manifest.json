{
  "manifest_version": 2,

  "name": "Zone-Mode",
  "description": "This Extension is an customizable address filter",
  "version": "0.9",
  "options_page": "html/config.html",

  "content_security_policy": "script-src 'self' https://maxcdn.bootstrapcdn.com; object-src 'self'",

  "browser_action": {
    "default_icon": "inactive.png",
    "default_popup": "html/popup.html"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],

  "background": {
    "scripts": ["js/backGround.js"]
  }

}
